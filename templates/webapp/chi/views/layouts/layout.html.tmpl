{{define "layout.html"}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{.Title}} - {{.ModulePath}}</title>
    <link rel="stylesheet" href="/static/css/style.css">
</head>
<body>
    <header>
        <div class="container">
            <h1>{{.ModulePath}}</h1>
            <nav>
                <ul>
                    <li><a href="/" {{if eq .CurrentPath "/"}}class="active"{{end}}>Home</a></li>
                    <li><a href="/about" {{if eq .CurrentPath "/about"}}class="active"{{end}}>About</a></li>
                    <li><a href="/contact" {{if eq .CurrentPath "/contact"}}class="active"{{end}}>Contact</a></li>
                    {{if ne .DatabaseType "none"}}
                    <li><a href="/users" {{if eq .CurrentPath "/users"}}class="active"{{end}}>Users</a></li>
                    {{end}}
                </ul>
            </nav>
        </div>
    </header>
    
    <main class="container">
        {{template "content" .}}
    </main>
    
    <footer>
        <div class="container">
            <p>&copy; {{.CurrentYear}} {{.ModulePath}}. All rights reserved.</p>
        </div>
    </footer>
    
    <script src="/static/js/main.js"></script>
</body>
</html>
{{end}}
