{{template "layouts/layout.html" .}}

{{define "title"}}Admin Dashboard - {{.Title}}{{end}}

{{define "content"}}
<div class="container py-5">
  <div class="row mb-4">
    <div class="col">
      <h1>Admin Dashboard</h1>
      <p class="lead">Welcome to the admin dashboard</p>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-4">
      <div class="card mb-3">
        <div class="card-header">
          Server Info
        </div>
        <div class="card-body">
          <p><strong>Environment:</strong> {{.Env}}</p>
          {{if .Version}}
          <p><strong>Version:</strong> {{.Version}}</p>
          <p><strong>Build:</strong> {{.Build}}</p>
          {{end}}
        </div>
      </div>
    </div>
    
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          Recent Activity
        </div>
        <div class="card-body">
          <p>No recent activity.</p>
        </div>
      </div>
    </div>
  </div>
</div>
{{end}}
