{{define "contact.html"}}
{{template "layout.html" .}}
{{end}}

{{define "content"}}
<section>
    <h1>{{.Title}}</h1>
    
    {{if .Success}}
    <div class="alert success">
        {{.Success}}
    </div>
    {{end}}
    
    {{if .Error}}
    <div class="alert error">
        {{.Error}}
    </div>
    {{end}}
    
    <form method="post" action="/contact">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" value="{{if .FormData}}{{.FormData.Name}}{{end}}" required>
        </div>
        
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" value="{{if .FormData}}{{.FormData.Email}}{{end}}" required>
        </div>
        
        <div class="form-group">
            <label for="message">Message</label>
            <textarea id="message" name="message" rows="5" required>{{if .FormData}}{{.FormData.Message}}{{end}}</textarea>
        </div>
        
        <button type="submit" class="btn">Send Message</button>
    </form>
</section>
{{end}}
