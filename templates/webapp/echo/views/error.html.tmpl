{{define "content"}}
<div class="error-page">
    <div class="error-container">
        <h2>Error {{.Code}}</h2>
        
        {{if eq .Code 404}}
        <div class="error-image">
            <img src="/static/img/404.svg" alt="Page not found">
        </div>
        <h3>Page Not Found</h3>
        <p>The page you are looking for does not exist or has been moved.</p>
        {{else if eq .Code 500}}
        <div class="error-image">
            <img src="/static/img/500.svg" alt="Server error">
        </div>
        <h3>Server Error</h3>
        <p>Something went wrong on our end. Please try again later.</p>
        {{else if eq .Code 403}}
        <div class="error-image">
            <img src="/static/img/403.svg" alt="Forbidden">
        </div>
        <h3>Access Denied</h3>
        <p>You don't have permission to access this resource.</p>
        {{else}}
        <h3>Something went wrong</h3>
        <p>{{.Message}}</p>
        {{end}}
        
        <div class="error-actions">
            <a href="/" class="btn primary">Go to Homepage</a>
            <button onclick="history.back()" class="btn secondary">Go Back</button>
        </div>
    </div>
</div>

<style>
    .error-page {
        text-align: center;
        padding: 2rem 0;
    }
    
    .error-container {
        max-width: 500px;
        margin: 0 auto;
    }
    
    .error-image {
        margin: 2rem 0;
    }
    
    .error-image img {
        max-width: 100%;
        height: auto;
        max-height: 250px;
    }
    
    .error-actions {
        margin-top: 2rem;
    }
</style>
{{end}}
